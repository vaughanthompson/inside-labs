    box-shadow: 0px 2px 2px black
div.cta > div
    text-align: center
div.cta > div > h6
    margin-bottom: 0

@media phoneRule
    a.majorCTA
        font-size:1.1em
        font-weight: 800
        padding: padM padXL padM padXL  
    a.ctaButton
        padding-top: padM
        padding-bottom: padM

