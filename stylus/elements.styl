// ctas
a.majorCTA,
a.ctaButton
    color: white
    background-color: brand3
    padding: padXXS padXS padXXS padXS
    margin-bottom: 7px
    display: inline-block
    white-space: nowrap
    border-radius: 2em
    font-size: 0.8em
    font-weight: 500
div#masthead a.majorCTA
